{
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "./../..",
        "args": {
            "UV_VERSION": "0.4.24"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "dockerDashComposeVersion": "none"
        },
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python", "ms-azuretools.vscode-docker", "tamasfe.even-better-toml"]
        }
    },
    "forwardPorts": [9004, 9005, 9090, 3000],
    "postCreateCommand": "uv python pin $(cat .python-version) && uv sync && uv run labcli docker build -f example/docker-compose.yml",
    "postStartCommand": "uv run labcli docker start -f example/docker-compose.yml",
    "remoteUser": "vscode"
}